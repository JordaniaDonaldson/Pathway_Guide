<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Switch
        android:textSize="20.0dip"
        android:id="@+id/switch1"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Use Internet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:textSize="26.0dip"
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="18.0dip"
        android:layout_marginRight="15.0dip"
        android:text="Turning internet off will reduce your data usage, but prevent course descriptions from being displayed."
        android:layout_below="@id/switch1"
        android:layout_centerHorizontal="true" />
</RelativeLayout>